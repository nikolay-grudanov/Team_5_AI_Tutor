# =============================================================================
# КОНФИГУРАЦИЯ OCR МОДУЛЯ
# =============================================================================

# =============================================================================
# vLLM СЕРВЕР
# =============================================================================
# URL вашего vLLM сервера
VLLM_BASE_URL=https://your-vllm-server.cloud.ru/v1

# Имя модели
VLLM_MODEL_NAME=model-run-olm-ocr

# API ключ (если требуется)
VLLM_API_KEY=EMPTY

# =============================================================================
# ПАРАМЕТРЫ ОБРАБОТКИ
# =============================================================================
# Количество параллельных потоков (рекомендуется 4-8)
MAX_WORKERS=4

# =============================================================================
# ПАРАМЕТРЫ ИЗОБРАЖЕНИЙ
# =============================================================================
# Изменять размер изображений перед отправкой
RESIZE_IMAGE=false

# Максимальный размер изображения (если resize=true)
MAX_IMAGE_SIZE=1920

# =============================================================================
# ПАРАМЕТРЫ ГЕНЕРАЦИИ
# =============================================================================
# Таймаут запроса в секундах
TIMEOUT=300

# Температура генерации (0.0 = детерминированно)
TEMPERATURE=0.0

# Максимальное количество токенов
MAX_TOKENS=8192

# Тип промпта (olmocr_technical, olmocr_yaml, olmocr_ru, simple)
PROMPT_TYPE=olmocr_technical

# =============================================================================
# ПАРАМЕТРЫ YAML (для olmOCR промптов)
# =============================================================================
# Язык контента: ru (русский), en (английский), mixed (смешанный)
YAML_LANGUAGE=ru

# Есть ли таблицы в документах
YAML_IS_TABLE=true

# Есть ли диаграммы/графики в документах
YAML_IS_DIAGRAM=true

# =============================================================================
# ПУТИ К ДАННЫМ
# =============================================================================
# Папка с исходными изображениями
DATA_RAW_DIR=data/raw

# Папка для сохранения результатов
DATA_PROCESSED_DIR=data/processed

# =============================================================================
# ЛОГИРОВАНИЕ
# =============================================================================
# Уровень логирования: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Путь к файлу логов
LOG_FILE=logs/ocr_processing.log